<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">


    <android.satoripop.com.switchbutton.widget.LabeledSwitch
        android:id="@+id/switchoEnService"
        android:layout_width="155dp"
        android:layout_height="39dp"
        android:layout_margin="16dp"
        android:layout_marginStart="110dp"
        android:layout_marginLeft="110dp"
        android:layout_marginTop="40dp"
        android:layout_marginEnd="110dp"
        android:layout_marginRight="110dp"
        android:textSize="14sp"
        app:colorBorder="@color/purple"
        app:colorOff="@color/purple"
        app:colorOn="#FFF"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.031"
        app:on="true"
        app:textOff="HORS SERVICE"
        app:textOn="EN SERVICE"
        tools:ignore="MissingPrefix" />

    <android.satoripop.com.ratingbar.ScaleRatingBar
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/simpleRatingBar"
        android:scaleType="fitXY"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        app:layout_constraintBottom_toBottomOf="@+id/switchHorsService"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srb_clearRatingEnabled="true"
        app:srb_clickable="true"
        app:srb_isIndicator="false"
        app:srb_minimumStars="1"
        app:srb_numStars="5"
        app:srb_rating="1"
        app:srb_scrollable="true"
        app:srb_starHeight="35dp"
        app:srb_starPadding="15dp"
        app:srb_starWidth="35dp"
        app:srb_stepSize="1"
        tools:ignore="MissingPrefix">

    </android.satoripop.com.ratingbar.ScaleRatingBar>

    <android.satoripop.com.switchbutton.widget.LabeledSwitch
        android:id="@+id/switchHorsService"
        android:layout_width="155dp"
        android:layout_height="39dp"
        android:layout_margin="16dp"
        android:layout_marginStart="110dp"
        android:layout_marginLeft="110dp"
        android:layout_marginEnd="110dp"
        android:layout_marginRight="110dp"

        android:layout_marginBottom="40dp"
        android:textSize="14sp"
        app:colorBorder="@color/grey"
        app:colorOff="@color/grey"
        app:colorOn="#FFF"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"


        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"

        app:layout_constraintVertical_bias="1.0"
        app:on="false"
        app:textOff="HORS SERVICE"
        app:textOn="EN SERVICE"
        tools:ignore="MissingPrefix" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="64dp"
        android:layout_height="62dp"
        android:gravity="center"
        android:text="2"
        android:textColor="#FFF"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/simpleRatingBar"
        app:layout_constraintEnd_toEndOf="@+id/simpleRatingBar"
        app:layout_constraintHorizontal_bias="0.255"
        app:layout_constraintStart_toStartOf="@+id/simpleRatingBar"
        app:layout_constraintTop_toTopOf="@+id/simpleRatingBar"
        app:layout_constraintVertical_bias="0.0" />

    <TextView
        android:id="@+id/textView1"
        android:layout_width="64dp"
        android:layout_height="62dp"
        android:gravity="center"
        android:text="1"
        android:textColor="#FFF"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/simpleRatingBar"
        app:layout_constraintEnd_toEndOf="@+id/simpleRatingBar"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/simpleRatingBar"
        app:layout_constraintTop_toTopOf="@+id/simpleRatingBar" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="64dp"
        android:layout_height="62dp"
        android:gravity="center"
        android:text="5"
        android:textColor="#FFF"
        android:textSize="27sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/simpleRatingBar"
        app:layout_constraintEnd_toEndOf="@+id/simpleRatingBar"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="@+id/simpleRatingBar"
        app:layout_constraintTop_toTopOf="@+id/simpleRatingBar" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="64dp"
        android:layout_height="62dp"
        android:gravity="center"
        android:text="3"
        android:textColor="#FFF"
        android:textSize="22sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/simpleRatingBar"
        app:layout_constraintEnd_toEndOf="@+id/simpleRatingBar"
        app:layout_constraintHorizontal_bias="0.507"
        app:layout_constraintStart_toStartOf="@+id/simpleRatingBar"
        app:layout_constraintTop_toTopOf="@+id/simpleRatingBar" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="64dp"
        android:layout_height="62dp"
        android:paddingRight="4dp"
        android:gravity="center"
        android:text="4"
        android:textColor="#FFF"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/simpleRatingBar"
        app:layout_constraintEnd_toEndOf="@+id/simpleRatingBar"
        app:layout_constraintHorizontal_bias="0.759"
        app:layout_constraintStart_toStartOf="@+id/simpleRatingBar"
        app:layout_constraintTop_toTopOf="@+id/simpleRatingBar"
        app:layout_constraintVertical_bias="0.0" />


</android.support.constraint.ConstraintLayout>
